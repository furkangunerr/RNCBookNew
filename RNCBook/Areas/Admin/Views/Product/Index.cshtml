
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
    </div>
</div>

<br />
<div class="p-4 border rounded  bg-primary">
    <table id="tblData" class="table table-striped table-bordered text-black-50 text-dark" style="width:100%">
        <thead class="thead-light bg-primary">
            <tr class="table-info bg-primary">
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {

    <script src="~/js/product.js"></script>
}
